{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "noEmit": true,
    "strict": true,
    "alwaysStrict": true,
    "noUncheckedSideEffectImports": true,
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noImplicitThis": true
  },
  "include": [ "**/*.ts" ],
  "exclude": [ "node_modules" ]
}
